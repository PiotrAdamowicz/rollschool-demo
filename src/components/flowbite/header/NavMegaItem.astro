---
import NavItem from "./NavItem.astro";
const {links, label} =Astro.props;
---
<li>
    <button
    id="mega-menu-full-dropdown-button"
    data-dropdown-toggle="mega-menu-full-dropdown"
    class="text-base flex items-center justify-between w-full py-2 px-3 font-medium text-gray-900 border-b border-gray-100 md:w-auto hover:bg-gray-50 md:hover:bg-transparent md:border-0 md:hover:text-blue-600 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-blue-500 md:dark:hover:bg-transparent dark:border-gray-700">
        {label} <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
</svg>
    </button>
    <div id="mega-menu-full-dropdown" class="mt-1 bg-white border-gray-200 shadow-sm border-y dark:bg-gray-800 dark:border-gray-600">
        <div class="flex justify-center w-screen max-w-screen-xl py-5 mx-auto text-gray-900 dark:text-white md:px-6">
            <ul aria-labelledby="mega-menu-full-dropdown-button">
                {links.map(link=>(
                    <NavItem href={link.href} text={link.label} />
                ))}
            </ul>
        </div>
      
    </div>
</li>