---
const {href,target="_self",label} = Astro.props;
---
<a href={href} target={target} class="w-1/2 absolute top-1/2 inset-x-1/4 z-10 bg-gradient-to-r from-secondary to-azul-500 from-0% to-90% text-white px-8 py-8 pb-7 rounded-md flex gap-6 justify-center">
    <span class="text-8xl font-bold">{label}</span>
    <svg class="text-9xl font-bold -mt-2 hover:animate-nudge" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 48 48" >
        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M42 24H6m24-12l12 12l-12 12" />
    </svg>
</a>